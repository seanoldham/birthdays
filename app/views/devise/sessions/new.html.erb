<div class="row">
  <div class="small-12 large-2 columns"><h2>Sign In</h2></div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field small-12 large-4 columns">
      <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
    </div>

    <div class="field small-12 large-4 columns">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
    </div>

    <div class="actions small-12 large-2 columns">
      <%= f.submit "Log in", :class => "button expand secondary" %>
    </div>
  <% end %>
</div>
