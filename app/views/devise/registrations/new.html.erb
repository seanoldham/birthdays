<div class="center row">
  <div class="small-11 large-6 small-centered large-centered columns">
    <div class="panel radius">
      <div class="row">
        <h3 class="subheader">Sign Up</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="row">
          <div class="field small-12 columns">
            <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
          </div>
        </div>
        <div class="row">
          <div class="field small-12 columns">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 characters minimum)" %>
          </div>
        </div>
        <div class="row">
          <div class="field small-12 columns">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
          </div>
        </div>
        <div class="row">
          <div class="actions small-12 columns">
            <%= f.submit "Sign Up", :class => "button expand radius" %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="columns">
          Already have an account? <%= link_to "Log In", new_user_session_path %>
        </div>
      </div>
      <!-- <hr>
      <div class="row">
        <div class="columns">
          <%= link_to "Forgot Password?", new_user_registration_path %>
        </div>
      </div> -->
    </div>
  </div>
</div>
