<div class="center row">
  <div class="small-11 large-6 small-centered large-centered columns">
    <div class="panel radius">
      <div class="row">
        <h3 class="subheader translucent">Update Birthday</h3>
      </div>
      <%= form_for(@birthday) do |f| %>
        <% if @birthday.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@birthday.errors.count, "error") %> prohibited this birthday from being saved:</h2>

            <ul>
            <% @birthday.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="row">
          <div class="field small-12 columns translucent">
            <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
          </div>
        </div>
        <div class="row">
          <div class="field small-12 columns translucent">
            <%= f.date_select :date, start_year: Date.today.year - 100, end_year: Date.today.year %>
          </div>
        </div>
        <div class="row">
          <div class="actions small-12 columns">
            <%= f.submit "Update Birthday", :class => "button expand radius" %>
          </div>
        </div>
      <% end %>
        <div class="row">
          <%= link_to 'Cancel', birthdays_path %>
        </div>
    </div>
  </div>
</div>
