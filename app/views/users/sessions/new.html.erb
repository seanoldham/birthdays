<div class="center row">
  <div class="small-11 large-6 small-centered large-centered columns">
    <div class="panel radius">
      <div class="row">
        <h3 class="subheader translucent">Log In</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="field small-12 columns translucent">
            <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
          </div>
        </div>
        <div class="row">
          <div class="field small-12 columns translucent">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          </div>
        </div>
        <div class="row">
          <div class="actions small-12 columns">
            <%= f.submit "Log In", :class => "button expand radius" %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="columns translucent">
          New to Birthdays? <%= link_to "Sign Up", new_user_registration_path %>
        </div>
      </div>
    </div>
  </div>
</div>
